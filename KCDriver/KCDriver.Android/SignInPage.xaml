<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KCDriver.Droid.SignInPage"
			 Title="K.C CAB"
			 BackgroundColor="Black"
			 >
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Grid Grid.Row="1" Margin="20,0,20,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="80"/>
						<RowDefinition Height="40"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
				
				<Image Grid.Row="1" Source="taxi_sign.PNG" Aspect="Fill" />
				<Entry Grid.Row="2" Placeholder="Username" PlaceholderColor="White" 
					   FontSize="16" TextColor="White" BackgroundColor="#202020"/>
				<Entry Grid.Row="3" Placeholder="Password" PlaceholderColor="White" 
					   FontSize="16" TextColor="White" BackgroundColor="#202020" IsPassword="True"/>
				<Button Grid.Row="4" Text="Continue" BackgroundColor="Yellow" TextColor="Black" 
						HeightRequest="50" VerticalOptions="Start" Clicked="SignInClicked"/>
				</Grid>
				<Label Text="Forgot Username/Password?" VerticalOptions="Start" 
					   HorizontalOptions="Center" TextColor="White"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>